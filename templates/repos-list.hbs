{{! Template from `travis` with MIT license }}
{{! Repo URL: https://github.com/travis-ci/travis-web }}
{{#if this.repos}}
  <ul class="repos-list">
    {{#each this.repos as |repo|}}
      <ReposListItem data-test-components-repos-list-item="true" @repo={{repo}} />
    {{/each}}
  </ul>
{{else}}
  <div class="loading-container">
    {{this.noReposMessage}}
  </div>
{{/if}}
