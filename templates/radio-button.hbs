{{! Template from `discourse` with GPL-2.0-only license }}
{{! Repo URL: git@github.com:discourse/discourse.git }}
<div class="radio-area">
  <input type="radio" name={{label}}>
  <span class="radio-label">
    {{#if icon}}
      {{d-icon icon}}
    {{/if}}
    {{label}}
  </span>
  {{#if extraLabel}}
    <span class="extra-label">
      {{html-safe extraLabel}}
    </span>
  {{/if}}
</div>
<div class="radio-description">
  {{description}}
</div>
