{{! Template from `smallrobotco` with MIT license }}
{{#if section.show}}
  <div class="outer {{section.background}} {{section.heroSize}} {{if section.isHero ' hero-active'}}{{if section.divider ' divided'}}{{if section.backgroundImage ' background-image'}}{{if section.backgroundImageUrl ' background-image'}}{{if section.animated ' animated'}} {{section.animation}} {{section.extraClasses}}"
      style="{{if section.backgroundImageUrl section.inlineBackground section.backgroundImage.inlineBackground}}">
    <div class='overlay {{section.overlay}}'>

      {{#if section.divider}}
        <AngledDivider />
      {{/if}}
      <div class="content-wrapper">
        <div class="container-fluid">
          <div class='row {{section.colHorizontalAlignment}} {{section.colVerticalAlignment}} {{if section.reverse 'flex-sm-row-reverse'}}'>

          {{#each section.column as |column|}}
            <div class='section-column {{column.columnWidthXs}} {{column.columnWidthSm}} {{column.columnWidthMd}} {{column.columnWidthLg}} {{column.columnWidthXl}} {{column.extraClasses}}'>

            {{#each column.element as |element|}}
              {{#if element.body }}
                <TextBlock @tagName="">
                  {{html-safe element.body.value}}
                </TextBlock>
              {{else if element.listingType}}
                {{!-- Listings of content --}}
                <ListingBlock @model={{element.listingType}} @articles={{articles}} @tagName="" />
              {{else if element.image }}
                <ImageBlock>
                  <img src="{{element.image.fullUrl}}" alt="{{element.image.alt}}" srcset="">
                </ImageBlock>
              {{else if element.slide}}
                <SlideshowBlock @model={{element.slide}} @breakpoints={{breakpoints}} @tagName="" />
              {{else}}
                <LoadingSpinner />
              {{/if}}
            {{/each}}
            </div>
          {{/each}}

          </div>
        </div>
      </div>
    </div>
  </div>
{{/if}}